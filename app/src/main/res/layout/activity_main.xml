<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95F1F3DB"
    android:clickable="false"
    android:overScrollMode="always"
    tools:context=".view.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#95F1F3DB"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/chartArea"
                android:layout_width="match_parent"
                android:layout_height="490dp">

                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/BudgetOverviewChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#95F1F3DB" />

            </FrameLayout>

            <TextView
                android:id="@+id/redLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Red Shades - high priority"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/greenLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Green Shades - medium priority"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/blueLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue - Savings"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/yellowLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yellow - Miscellaneous/free spending"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>